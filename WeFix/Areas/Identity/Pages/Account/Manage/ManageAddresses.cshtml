@page
@model WeFix.Areas.Identity.Pages.Account.Manage.ManageAddressesModel
@{
    ViewData["Title"] = "Manage Addresses";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Add New Address</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AddressInput.AddressLine1"></label>
                <input asp-for="AddressInput.AddressLine1" class="form-control" />
                <span asp-validation-for="AddressInput.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressInput.AddressLine2"></label>
                <input asp-for="AddressInput.AddressLine2" class="form-control" />
                <span asp-validation-for="AddressInput.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressInput.City"></label>
                <input asp-for="AddressInput.City" class="form-control" />
                <span asp-validation-for="AddressInput.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressInput.State"></label>
                <input asp-for="AddressInput.State" class="form-control" />
                <span asp-validation-for="AddressInput.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressInput.PostCode"></label>
                <input asp-for="AddressInput.PostCode" class="form-control" />
                <span asp-validation-for="AddressInput.PostCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressInput.Country"></label>
                <input asp-for="AddressInput.Country" class="form-control" />
                <span asp-validation-for="AddressInput.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Address" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h4>Your Addresses</h4>
        <hr />
        @if (Model.UserAddresses == null || Model.UserAddresses.Count == 0)
        {
            <p>No addresses found.</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var address in Model.UserAddresses)
                {
                    <li class="list-group-item">
                        Address Line 1: @address.AddressLine1<br />
                        Address Line 2: @address.AddressLine2<br />
                        City: @address.City<br />
                        State: @address.State<br />
                        Post Code: @address.PostCode<br />
                        Country: @address.Country
                    </li>
                }
            </ul>
        }
    </div>
</div>
