@page
@model WeFix.Pages.Appointments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Appointment.Email" class="control-label">Customer Email</label>
                <input asp-for="Appointment.Email" class="form-control" />
                <span asp-validation-for="Appointment.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Appointment.VehicleReg" class="control-label">Vehicle Registration</label>
                <input asp-for="Appointment.VehicleReg" class="form-control" />
                <span asp-validation-for="Appointment.VehicleReg" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Appointment.Date" class="control-label">Appointment Date</label>
                <input asp-for="Appointment.Date" class="form-control" />
                <span asp-validation-for="Appointment.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Appointment.Description" class="control-label">Description</label>
                <input asp-for="Appointment.Description" class="form-control" />
                <span asp-validation-for="Appointment.Description" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group">
                <input type="submit" value="Submit Request" class="btn btn-secondary" style="float:left" />
                <a asp-page="Index" class="btn btn-secondary" style="float:right">Cancel</a>
                <div style="clear: both;"></div>
            </div>


        </form>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="emailNotFoundModal" tabindex="-1" role="dialog" aria-labelledby="emailNotFoundModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="emailNotFoundModalLabel">Email Not Found</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>The specified customer email was not found in the system.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Show the email not found modal if the specified customer email was not found
        @if (!ModelState.IsValid && ViewData.ModelState.ContainsKey("Appointment.CustomerEmail"))
        {
            @:$("#emailNotFoundModal").modal("show");
        }
    </script>
}
