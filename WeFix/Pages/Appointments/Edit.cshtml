@page
@model WeFix.Pages.Appointments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.Id" />
            <div class="form-group">
                <label asp-for="Appointment.OwnerID" class="control-label"></label>
                <input asp-for="Appointment.OwnerID" class="form-control" readonly value="@User.Identity.Name" />
                <span asp-validation-for="Appointment.OwnerID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Appointment.VehicleReg" class="control-label"></label>
                <input asp-for="Appointment.VehicleReg" class="form-control" />
                <span asp-validation-for="Appointment.VehicleReg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Date" class="control-label"></label>
                <input asp-for="Appointment.Date" class="form-control" />
                <span asp-validation-for="Appointment.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Description" class="control-label"></label>
                <input asp-for="Appointment.Description" class="form-control" />
                <span asp-validation-for="Appointment.Description" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group">
                <input type="submit" value="Submit Request" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
