@page
@model WeFix.Pages.CompleteJobModel
@{
    ViewData["Title"] = "Complete Job";
}

<h1>Complete Job</h1>

<div class="card">
    <div class="card-header">
        Appointment Details
    </div>
    <div class="card-body">
        <h5 class="card-title">Appointment ID: @Model.AppointmentId</h5>
        <p class="card-text">Customer Name: @Model.CustomerName</p>
        <p class="card-text">Vehicle Reg: @Model.VehicleReg</p>
        <p class="card-text">Date: @Model.Date</p>
        <p class="card-text">Description: @Model.Description</p>
        <p>Job completed!</p>
    </div>
</div>
